<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SiteCook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SiteCook.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="colorHeader">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-1 colorHeader">
            <div class="container-fluid colorHeader">
                <a class="navbar-brand cook">Кухня</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item mt-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AddingCategory">Добавление категории</a>
                        </li>
                        <li class="nav-item mt-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AddingMeal">Добавление блюда</a>
                        </li>
                        <li class="nav-item mt-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AddingModerator">Добавление модератора</a>
                        </li>
                        <li class="nav-item but">
                           <form asp-action="LeaveAccount" class="nav-link">
                               <button class="nav-link text-black e204_69">Выйти</button>
                               </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>