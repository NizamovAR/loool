@{
    ViewData["Title"] = "Вход";
    Layout = "_EnterLayout";
}
<link rel="stylesheet" href="~/css/Authorization.css" asp-append-version="true" />
<form asp-action="Authorization" method="post">
    <div class="v1_2">
        <span class="v1_3">АВТОРИЗАЦИЯ</span>
        <input class="v1_4" name="login">
        <span class="v1_5">Логин</span>
        <span class="v1_6">Пароль</span>
        <input class="v1_7" name="password">
        <button type="submit" asp-action="Authorization" class="v1_8">ВОЙТИ</button>
        <a asp-action="Registration" class="v1_10">Создать аккаунт</a>
    </div>
</form>
<script>
    // Определение функции для вывода сообщения на странице
    function showNotification(message) {
        // Создание элемента div для сообщения
        var notification = document.createElement("div");
        notification.className = "notification";
        notification.innerHTML = message;

        // Добавление элемента на страницу
        document.body.appendChild(notification);

        // Автоматическое скрытие сообщения через 5 секунд
        setTimeout(function () {
            notification.parentNode.removeChild(notification);
        }, 5000);
    }

    // Вызов функции для вывода уведомления из C# кода
    showNotification("@ViewBag.Message");
</script>